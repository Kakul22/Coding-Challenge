class Solution {
    public boolean isPalindrome(String s) {
        int left=0;                      // Initialize the left pointer at the start of string (i=0)
        int right=s.length()-1;          //                right               end of the string ending index 
        while (left<right){
            while(left<right && !Character.isLetterOrDigit(s.charAt(left))){
                left++;                 // Move the pointer one step to the right.
            }
            while(left<right && !Character.isLetterOrDigit(s.charAt(right))){
                right--;                // Move the pointer one step to the left ,towards the center
            }
            if(left<right){
                char leftchar=Character.toLowerCase(s.charAt(left));             // convert the leftchar to lowecase
                char rightchar=Character.toLowerCase(s.charAt(right));           // convert the rightchar to lowercae
                
                if(leftchar!=rightchar){
                    return false;                   // if not palindrome 
                }
                left++;                           // if palindrome move the pointer to check the next pair 
                right--;                          // same 
            }
        }
        return true;
    
        
    }
}
